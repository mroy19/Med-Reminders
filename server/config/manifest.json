{
  "connections": [
    {
      "host": "localhost",
      "port": "3003",
      "labels": ["api"],
      "routes": {
        "cors": {
          "origin": [ "http://localhost:8100" ]
        }
      }
    }
  ],
  "registrations": [
    {
      "plugin": "hapi-auth-jwt2"
    },
    {
      "plugin": "./authentication"
    },
    {
      "plugin": "./models"
    },
    {
      "plugin": "./db"
    },
    {
      "plugin": "./controllers"
    },
    {
      "plugin": "./routes"
    },
    {
      "plugin": {
        "register": "good",
        "options": {
          "reporters": [
            {
              "reporter":"good-console",
              "events": {
                "log": "*",
                "response": "*"
              }
            }
          ]
        }
      }
    }
  ]
}
